<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:layout_height="32dp"
    android:orientation="horizontal"
    android:layoutDirection="ltr">

    <com.faranegar.bookflight.customView.CustomSwipeNumberPicker
        android:id="@+id/number_picker"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:textSize="@dimen/font_size"
        android:textColor="@android:color/white"
        app:snp_arrowColor="@android:color/white"
        app:snp_backgroundColor="@color/backgroud_box"
        app:snp_numberColor="@color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.faranegar.bookflight.customView.AwsomeTextView
            android:id="@+id/dec_btn"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1.25"
            android:background="@drawable/number_picker_decrease_button_shape"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/minus_icon"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_less_normal" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"/>


        <com.faranegar.bookflight.customView.AwsomeTextView
            android:id="@+id/inc_btn"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1.25"
            android:background="@drawable/number_picker_increase_button_shape"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/plus_icon"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_less_normal" />
    </LinearLayout>
</RelativeLayout>
